{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": ["**", "!!packages/**/.svelte-kit", "!!docs"]
	},
	"formatter": {
		"enabled": true,
		"includes": ["!node_modules/**"],
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["!node_modules/**"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	}
}
